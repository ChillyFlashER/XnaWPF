<Window x:Class="Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xnaWpf="clr-namespace:XnaWPF;assembly=XnaWPF"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <xnaWpf:GraphicsDeviceControl Name="XnaHost" 
                                      HwndKeyDown="XnaHost_HwndKeyDown"
                                      LoadContent="XnaHost_LoadContent" 
                                      Draw="XnaHost_Draw" Margin="100,0,0,0" />
        
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="85"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,37,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="85"/>
    
    </Grid>
</Window>
